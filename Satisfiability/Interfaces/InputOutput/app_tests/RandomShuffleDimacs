# set -o errexit # currently "find" creates an error due to non-existing directories, and also the match-program might fail
set -o nounset

list_programs="${bin_dir}/RandomShuffleDimacs*"
app_test_dir=${OKlib}/Satisfiability/Interfaces/InputOutput/app_tests

echo "PROGRAMS FOUND:"
for P in ${list_programs}; do echo ${P}; done

cd ${app_test_dir}

case ${test_level} in
basic) list_test_cases="$(find test_cases/basic/RandomShuffleDimacs/ -name '*.cnf')"
    ;;
full) list_test_cases="$(find test_cases/basic/RandomShuffleDimacs/ -name '*.cnf') $(find test_cases/full/RandomShuffleDimacs/ -name '*.cnf')"
      list_programs="${list_programs} ${bin_dir}/RandomShuffleDimacs*"
    ;;
extensive) list_test_cases="$(find test_cases/basic/RandomShuffleDimacs/ -name '*.cnf') $(find test_cases/full/RandomShuffleDimacs/ -name '*.cnf') $(find test_cases/extensive/RandomShuffleDimacs/ -name '*.cnf')"
	   list_programs="${list_programs} ${bin_dir}/RandomShuffleDimacs*"
    ;;
esac

echo "TEST FORMULAS FOUND:" 
for T in ${list_test_cases}; do echo ${T}; done

echo "EXECUTION OF PROGRAMS:"

match_tool=${bin_dir}/MatchFiles-O3-DNDEBUG

for S in ${list_programs}; do
  echo
  for P in ${list_test_cases}; do
    echo ${S} "<" ${P}
    output="$(${S} < ${P})"
    template="$(dirname ${P})/dimacs_output/$(basename ${P} .cnf)"
    echo "${output}" | ${match_tool} "${template}"
    result=$?
    if [[ ${result} != 0 ]]; then
      echo -e "ERROR: OUTPUT of solver is\n${output}\n, while TEMPLATE is"
      cat ${template}; echo; exit 1
    fi
  done
done


exit 0
