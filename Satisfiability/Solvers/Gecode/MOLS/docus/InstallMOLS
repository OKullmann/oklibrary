# USAGE:

# ./InstallMOLS
# builds MOLS programs based on Gecode.

set -o errexit
set -o nounset

program="InstallMOLS"
version="0.0.1"

echo -e "  Required packages:"
echo -e "    g++ (version 10+), Gecode (version 6.2+)"
read -p "Continue? " -n 1 -r
echo
if [[ $REPLY =~ ^[Yy]$ ]]
then

rel_mols=../
abs_mols="$(realpath ${rel_mols})"
cd ${abs_mols}
make

source ~/.profile

fi
