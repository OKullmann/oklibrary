set -o errexit
set -o nounset

program="Run"
version="0.3.0"

scriptdir=$(dirname "$0")
executable=${executable:-"${scriptdir}/ExpQueensRC"}

numargs=$#
if (( numargs == 0 )); then
  echo -e "USAGE:\n ${program} N [...]\n further parameters \"...\" passed to $executable"
  exit 0
fi

N=$1
shift

timestamp=$(date "+%F_%H-%M-%S")
logfile="${program}_${timestamp}"
timingtool="/usr/bin/time"

echo "${program} in version ${version}, logfile = ${logfile}, pid=$$"

${executable} $N 0 0 "$@" rh > ${logfile}

for ((heur=0; heur<=4; ++heur)); do
  for ((cache=0; cache<=1; ++cache)); do
    for ((i=4; i<=N; ++i)); do
      ${timingtool} -f " %e" ${executable} $i $heur $cache "$@" rd >> ${logfile} 2>&1
    done
  done
done

timestamp2=$(date "+%F_%H-%M-%S")
echo "Completed $timestamp2"

exit 0
