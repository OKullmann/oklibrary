# Computing the sizes of conflict-graph and derived biclique-compatibility graph

# Extracting:
# i
# n
# c
# E
# cE (possibly NA)



# USAGE:

# DirExtract QBF2BCC

# TODOS:


set -o errexit
set -o nounset

program="DirExtract"
errorm="ERROR[${program}]:"
version="0.0.5"

base_dir="$1"
base_dir="${base_dir%*/}"

: ${output:="${base_dir}.R"}
echo -e "Output: \"${output}\""

echo " i n c E cE" > ${output}

shopt -s globstar
for dir in ${base_dir}/**/A_*; do

  cat $dir/i >> ${output}
  echo -n " " >> ${output}
  cat $dir/n >> ${output}
  echo -n " " >> ${output}
  cat $dir/c >> ${output}
  echo -n " " >> ${output}
  cat $dir/E >> ${output}
  echo -n " " >> ${output}
  if [[ -f ${dir}/E ]]; then
    cat $dir/cE >> ${output}
  else
    echo "NA" >> ${output}
  fi
  echo        >> ${output}

done
