# Putting indexing-files in a QBF2BCC-directory

#


# USAGE:

# DirIndex QBF2BCC

# TODOS:


set -o errexit
set -o nounset

program="DirIndex"
errorm="ERROR[${program}]:"
version="0.0.7"

base_dir="$1"
base_dir="${base_dir%*/}"

shopt -s globstar

index=0
count=0
for dir in ${base_dir}/*; do

  ((++index))
  cd $dir
  echo -n ${index} > .d

  subindex=0
  for subdir in *; do
    if ! [[ -d ${subdir} ]]; then
      echo -e "$errorm \"$dir/$subdir\" is not a directory."
      exit 1
    fi
    ((++subindex))
    cd $subdir
    echo -n ${subindex} > .sd

    instindex=0
    for instdir in *; do
      if ! [[ -d ${instdir} ]]; then
        echo -e "$errorm \"$dir/$subdir/$instdir\" is not a directory."
        exit 1
      fi
      ((++instindex))
      cd $instdir
      echo -n ${instindex} > .qi

      aindex=0
      for adir in *; do
        if ! [[ -d ${adir} ]]; then
          echo -e "$errorm \"$dir/$subdir/$instdir/$adir\" is not a directory."
          exit 1
        fi
        ((++aindex))
        ((++count))
        echo -n "${index}/${subindex}/${instindex}/${aindex}" > ${adir}/p
      done

      cd ..
    done

    cd ..
  done

  cd ../..
done

echo $count
