SHELL := /bin/bash
.SUFFIXES :
.PHONY : all

.ONESHELL :

targetlist := $(addsuffix .result,$(basename $(wildcard *.dqdimacs)))


all : $(targetlist)

$(targetlist) : %.result : %.dqdimacs
	@echo -en "\"$*\" " > $@
	file="temp_$*"
	cat $< | awk -f DQCNFSanitiser.awk > $${file}
	tempdir="expdir_$*"
	outputdirectory="$${tempdir}" AAnalysis $${file}
	tail -1 $${tempdir}/stats >> $@
	rm -r $${tempdir}
	rm $${file}
