# set -o errexit # currently "find" creates an error due to non-existing directories, and also the match-program might fail
set -o nounset


list_programs="${bin_dir}/RUcpGen*"


case ${test_level} in
basic) list_test_cases="$(find app_tests/test_cases/basic/RUcpGen/ -name '*.cnf' -maxdepth 1)"
    ;;
full) list_test_cases="$(find app_tests/test_cases/basic/RUcpGen/ -name '*.cnf' -maxdepth 1) $(find app_tests/test_cases/full/RUcpGen/ -name '*.cnf' -maxdepth 1)"
    ;;
extensive) list_test_cases="$(find app_tests/test_cases/basic/RUcpGen/ -name '*.cnf' -maxdepth 1) $(find app_tests/test_cases/full/RUcpGen/ -name '*.cnf' -maxdepth 1) $(find app_tests/test_cases/extensive/RUcpGen/ -name '*.cnf' -maxdepth 1)"
    ;;
esac

echo "PROGRAMS FOUND:"
for P in ${list_programs}; do echo ${P}; done

echo "TEST FORMULAS FOUND:" 
for T in ${list_test_cases}; do echo ${T}; done

echo "EXECUTION OF PROGRAMS:"

match_tool=${bin_dir}/MatchFiles-O3-DNDEBUG
seed=1

for S in ${list_programs}; do
  echo
  for P in ${list_test_cases}; do
    echo ${S} ${P}
    output="$(${S} ${P})"
    template="$(dirname ${P})/dimacs_output/$(basename ${P} .cnf)"
    echo "${output}" | ${match_tool} "${template}"
    result=$?
    if [[ ${result} != 0 ]]; then
      echo -e "ERROR: OUTPUT of solver is\n${output}\n, while TEMPLATE is"
      cat ${template}; echo; exit 1
    fi
    if [ -e $(dirname ${P})/aux_input/$(basename ${P} .cnf)/ ]; then
        list_aux_cases="$(find $(dirname ${P})/aux_input/$(basename ${P} .cnf)/ -name '*.cnf')"
        for A in ${list_aux_cases}; do
            echo ${S} ${P} ${A}
            output="$(${S} ${P} ${A})"
            template="$(dirname ${P})/dimacs_output/$(basename ${P} .cnf)_$(basename ${A} .cnf)"
            echo "${output}" | ${match_tool} "${template}"
            result=$?
            if [[ ${result} != 0 ]]; then
                echo -e "ERROR: OUTPUT of solver is\n${output}\n, while TEMPLATE is"
                cat ${template}; echo; exit 1
            fi
        done
    fi
  done
done


exit 0

