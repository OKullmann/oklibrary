okltest_hrls_p(f) := (
  /* XXX */
  assert(f(matrix([2,1],[1,2])) = false),
  assert(f(matrix([1,2],[2,1])) = true),
  assert(f(matrix([1,3,2],[2,1,3],[3,2,1])) = true),
  true)$

okltest_rls_p(f) := (
  /* XXX */
