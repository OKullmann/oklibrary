okltest_ocomls_p(f) := (
  assert(f(scom_l([1]),scom_l([1])) = true),
  assert(f(scom_l([1,2],[2,1]), scom_l([1,2],[2,1])) = false),
  assert(f(scom_l([1,2],[2,1]), scom_l([2,1],[1,2])) = false),
  assert(okltest_ols_p(buildq([f], lambda([A,B], f(m2scom(A),m2scom(B))))) = true),
  true)$

