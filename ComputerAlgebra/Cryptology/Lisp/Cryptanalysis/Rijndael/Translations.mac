      if first(a) = "aes_add_cst" then aes_add_cst_cl(a)
      else if first(a) = "aes_eq_cst" then aes_eq_cst_cl(a)
      else if first(a) = "aes_mul2_cst" then aes_mul2_ts_cst_cl(a)
      else if first(a) = "aes_mul3_cst" then aes_mul3_ts_cst_cl(a)
