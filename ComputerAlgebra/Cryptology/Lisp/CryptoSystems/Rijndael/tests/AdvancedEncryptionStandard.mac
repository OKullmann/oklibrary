  assert(f(diagmatrix(4,0))=diagmatrix(4,0)),
  assert(f(genmatrix(lambda([a,b],[a,mod((b-1)+(a-1),4)+1]),4,4)) =
    genmatrix(lambda([a,b],[a,b]),4,4)),
  true)$


