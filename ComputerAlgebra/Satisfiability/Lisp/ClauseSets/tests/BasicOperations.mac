/* ***********************************
   * Selecting parts of a clause-set *
   ***********************************
*/

okltest_scs_k(f) := (
  assert(f({},0) = {}),
  assert(f({},1) = {}),
  assert(f({{}},0) = {{}}),
  assert(f({{}},1) = {}),
  assert(f({{1}},0) = {}),
  assert(f({{1}},1) = {{1}}),
  true)$

okltest_scs_l(f) := (
  assert(f({},1) = {}),
  assert(f({{}},1) = {}),
  assert(f({{1}},1) = {{1}}),
  assert(f({{1}},-1) = {}),
  assert(f({{1}},2) = {}),
  assert(f({{1,2},{-1,2}},1) = {{1,2}}),
  assert(f({{1,2},{-1,2}},-1) = {{-1,2}}),
  assert(f({{1,2},{-1,2}},2) = {{1,2},{-1,2}}),
  true)$

okltest_scs_v(f) := (
  assert(f({},1) = {}),
  assert(f({{}},1) = {}),
  assert(f({{1}},1) = {{1}}),
  assert(f({{1}},-1) = {}),
  assert(f({{1}},2) = {}),
  assert(f({{1,2},{-1,2}},1) = {{1,2},{-1,2}}),
  assert(f({{1,2},{-1,2}},2) = {{1,2},{-1,2}}),
  assert(f({{1,2},{-1,2}},3) = {}),
  true)$

okltest_scs_V(f) := block([F],
  assert(f({},{}) = {}),
  assert(f({{}},{}) = {}),
  assert(f({},{1}) = {}),
  assert(f({{1}},{}) = {}),
  okltest_scls_v(buildq([f],lambda([F,v],f(F,{v})))),
  F : {{1,2},{-1,3},{2,3},{3,4},{-2,-4}},
  assert(f(F,{1,2}) = {{1,2},{-1,3},{2,3},{-2,-4}}),
  assert(f(F,{1,4}) = {{1,2},{-1,3},{3,4},{-2,-4}}),
  true)$

