   * Clauses *
   ***********
*/

okltest_comp_sl(f) := (
  assert(f({}) = {}),
  assert(f({1}) = {-1}),
  assert(f({-1}) = {1}),
  assert(f({1,-2}) = {-1,2}),
  assert(f({1,-1}) = {1,-1}),
  assert(f({2,-2,1,-3}) = {2,-2,-1,3}),
  true)$

okltest_c_p(f) := block([x],
  assert(f({}) = true),
  assert(f([]) = false),
  assert(f(1) = false),
  assert(f(-1) = false),
  assert(f(0) = false),
  assert(f({1}) = true),
  assert(f({[]}) = false),
  assert(f({1,-2}) = true),
  assert(f({1,-1}) = false),
  assert(f(x) = false),
  assert(f({x}) = false),
  assert(okltest_l_p(buildq([f],lambda([x],f({x}))))),
  true)$

okltest_clashp(f) := (
  assert(f({},{}) = false),
  assert(f({1},{}) = false),
  assert(f({},{1}) = false),
  assert(f({1},{1}) = false),
  assert(f({1},{-1}) = true),
  assert(f({1,2},{-2,3}) = true),
  true)$

okltest_var_sl(f) := (
  assert(f({}) = {}),
  assert(f({1}) = {1}),
  assert(f({1,-2}) = {1,2}),
  assert(f({1,-1,2,-3}) = {1,2,3}),
  true)$

okltest_pospart_c(f) := (
  assert(f({}) = {}),
  assert(f({-1}) = {}),
  assert(f({1}) = {1}),
  assert(f({1,-2,3,-4}) = {1,3}),
  true)$

okltest_negpart_c(f) := (
  assert(okltest_pospart_c(buildq([f],lambda([C],comp_sl(f(comp_sl(C))))))),
  true)$

okltest_posp_c(f) := (
  assert(f({}) = true),
  assert(f({-1}) = false),
  assert(f({1}) = true),
  assert(f({1,2}) = true),
  assert(f({1,-2}) = false),
  true)$

okltest_negp_c(f) := (
  assert(f({}) = true),
  assert(f({-1}) = true),
  assert(f({1}) = false),
  assert(f({-1,-2}) = true),
  assert(f({-1,2}) = false),
  true)$


