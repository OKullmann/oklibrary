/* **************************
   * Variables and literals *
   **************************
*/

okltest_v_p(f) := block([x],
  assert(f("x") = false),
  assert(f(1) = true),
  assert(f(0) = false),
  assert(f(-1) = false),
  assert(f(x) = false),
  assert(f(php(3,4)) = true),
  true)$

okltest_l_p(f) := block([x],
  assert(f(1) = true),
  assert(f(0) = false),
  assert(f(-1) = true),
  assert(f(x) = false),
  assert(f(php(3,4)) = true),
  assert(f(-php(3,4)) = true),
  true)$


okltest_var_l(f) := (
  for i : 1 thru 10 do (
    assert(f(i) = i),
    assert(f(-i) = i)
  ),
  true
)$

okltest_sign_l(f) := (
  for i : 1 thru 10 do (
    assert(f(i) = 1),
    assert(f(-i) = -1)
  ),
  true
)$

okltest_pos_l(f) := (
  assert(f(1) = true),
  assert(f(-1) = false),
  true)$

okltest_neg_l(f) := (
  assert(f(1) = false),
  assert(f(-1) = true),
  true)$

okltest_literals_v(f) := (
  assert(f({}) = {}),
  assert(f({1}) = {1,-1}),
  assert(f({1,2}) = {1,-1,2,-2}),
  assert(f({-1}) = {1,-1}),
  assert(f({1,-2}) = {1,-1,2,-2}),
  assert(f({1,-2,-1}) = {1,-1,2,-2}),
  true)$

okltest_gv(f) := block([a],
  assert(v_p(f()) = true),
  assert(v_p(f(1)) = true),
  assert(v_p(f(1,2,[],{})) = true),
  /* assert(v_p(f("hh")) = true), */ /* BUG with Maxima */
  assert(v_p(f(a)) = true),
  assert(is(f(1) = f(1)) = true),
  assert(is(f(1) = f(2)) = false),
  assert(is(f(1) = f(a)) = false),
  assert(is(f(a) = f(a)) = true),
  assert(is(gv_var(a) = f(a)) = true),
  true)$

okltest_less_l(f) := (
  assert(f(0,-1) = true),
  assert(f(0,1) = true),
  assert(f(-1,-2) = true),
  assert(f(-1,2) = true),
  assert(f(-1,0) = false),
  assert(f(1,0) = false),
  assert(f(-2,-1) = false),
  true)$


